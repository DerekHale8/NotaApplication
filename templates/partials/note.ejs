<div class="container ">
  <div class="row row-cols-4">

    <% if (notes.length) { %>
      <% notes.forEach(({ id, text, date }) => { %>
        <a href="/notes/<%= id %>">
          <div class="col pt-4">
            <div class="card ">
              <div class="card-header">
                <%= date %>
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <p><%= text %>
                  </p>
                  
                </blockquote>
              </div>
            </div>
          </div>
        </a>
        <% }) %>
        <% } %>

</div>
</div>